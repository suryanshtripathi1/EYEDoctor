<section class="login">
    <div class="flex items-center justify-center">
        <div class="px-8 py-6 mx-4 mt-24 text-left bg-white rounded-3xl shadow-lg md:w-1/3 lg:w-1/3 sm:w-1/3">
            <h3 class="text-2xl font-bold text-center mb-2">Registration</h3>
            <% if(messages.error) { %>
            <span class="text-red-500 tex-sm"><%= messages.error %></span>
            <% } %>
            <form action="/signup" method="post">
                <div class="mt-4">
                    <div>
                        <label class="block" for="Name">Name</label>
                                <input name="name" value="<%= messages.name %>" type="text" placeholder="Name"
                                    class="input w-full px-4 py-2 mt-2 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="mt-4">
                        <label class="block" for="email">Email</label>
                                <input name="email" value="<%= messages.email %>" type="text" placeholder="Email"
                                    class="input w-full px-4 py-2 mt-2 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="mt-4">
                        <label class="block">Password</label>
                                <input name="password" type="password" placeholder="Password"
                                    class="input w-full px-4 py-2 mt-2 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="flex">
                        <button class="signup-button w-full px-6 py-2 mt-4 text-white rounded-lg" type="submit">Register Now</button>
                    </div>
                    <div class="mt-6 text-grey-dark">
                        Already have an account?
                        <a class="text-blue-700 hover:underline" href="/login">
                            Login now
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <p class="text-lg mt-4 text-center text-gray-700 text-xs">
        Copyright &copy; SIMX PHARMA. All rights reserved!
    </p>
</section>