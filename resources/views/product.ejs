<section class="product container mx-auto py-8 px-20">
    <h1 class="text-xl font-bold mb-36 underline text-center text-5xl">Products</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-14 row-gap-16">
        <% medicines.forEach(function(medicine) { %>
            <div class="w-full md:w-64">
                <img class="h-41 mb-4 mx-auto" src="/img/products/<%= medicine.image %>" alt="Medicine">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= medicine.name %></h2>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹ <%= medicine.price %></span>
                        <button data-medicine="<%= JSON.stringify(medicine) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>